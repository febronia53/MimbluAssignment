<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MimbluAssignment" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/brand</item>
    </style>

    <style name="Theme.MimbluAssignment" parent="Base.Theme.MimbluAssignment" />

    <style name="AppNameTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/brand</item>
        <item name="android:textSize">@dimen/text26</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainTextStyle" parent="AppNameTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text20</item>
    </style>

    <style name="BodyTextStyle" parent="TextAppearance.AppCompat">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text12</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LogoutTextStyle" parent="AppNameTextStyle">
        <item name="android:textSize">@dimen/text16</item>
    </style>


    <style name="RecyclerSymptomsStyles">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="divider">@drawable/recycler_divider</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="background">@drawable/button_background</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text16</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MatchTextStyle" parent="AppNameTextStyle">
        <item name="android:textSize">@dimen/text16</item>


    </style>
</resources>